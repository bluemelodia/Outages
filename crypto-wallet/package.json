{
  "name": "crypto-wallet-frontend",
  "version": "1.0.0",
  "description": "Crypto wallet frontend",
  "main": "index.html",
  "homepage": "https://bluemelodia.github.io/Outages",
  "scripts": {
    "start": "concurrently -n FRONTEND,BACKEND_PROXY,LOGFLARE_PROXY -c cyan,green,magenta \"npm run start:frontend\" \"npm run start:backend-proxy\" \"npm run start:logflare-proxy\"",
    "start:frontend": "live-server frontend --open=index.html --port=3000 --host=localhost",
    "start:backend-proxy": "npx lcp --proxyUrl http://localhost:8080 --port 8011",
    "start:logflare-proxy": "npx lcp --proxyUrl https://api.logflare.app --port 8010",
    "predeploy": "npm run build",
    "deploy": "npx gh-pages -d frontend --branch gh-pages --repo https://github.com/bluemelodia/Outages.git --message \"force deploy\"",
    "build": "echo 'Nothing to build, copying frontend as-is'"
  },
  "devDependencies": {
    "concurrently": "9.2.1",
    "gh-pages": "6.3.0",
    "live-server": "1.2.2",
    "local-cors-proxy": "1.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "firebase": "^12.3.0"
  }
}
